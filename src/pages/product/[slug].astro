<Layout>
  <div class="container">
    <div class="navigation1">
      <div class="navigation">
        <a href="/">
          <img src="../logo/pil.svg" class="back" alt="" /> Forside</a
        >
      </div>
      <div class="navigation">
        <a href="/produktvisning">
