          <p><strong>Vask:</strong> {myData.Wash}</p>
        </div>

        <div class="comment-section">
          <p><strong>Kommentar:</strong></p>
          <p>
            {myData.Comment}
          </p>
        </div>
      </div>
    </div>
    <h2 class="related-title">Andre produkter i st√∏rrelse {myData.Size}</h2>

    {
      relatedProducts.length > 0 ? (
        <section class="grid">
          {relatedProducts.map((product) => (
            <Card data={product} />
          ))}
        </section>
      ) : (
        <p class="no-results">Der er ikke flere items i din st√∏rrelse.</p>
      )
